<div class = "center">
  <main class="container login border rounded-4">
    <%= image_tag ("ability.png"), class:"logo_ability mb-3" %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mx-auto col-md-10">
        <%= f.text_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "email" %>
      </div>

      <div class="mx-auto col-md-10 pt-3">
        <%= f.password_field :password,  class: "form-control", autocomplete: "current-password", placeholder: "Senha" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="check_lembrar">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>

      <div class="actions d-grid gap-2 col-10 mx-auto mt-2">
        <%= f.submit "Entrar", class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </main>
</div>